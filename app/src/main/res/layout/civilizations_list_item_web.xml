<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_web_civilization_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:padding="1dp"
                android:text="@string/civilization_list_item_title"
                android:textColor="@color/sky_blue"
                android:textSize="@dimen/civilizations_list_item_text" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_forum" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_web_civilization_expansion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="@string/civilization_list_item_expansion"
            android:textColor="@color/lighter_purple"
            android:textSize="@dimen/civilizations_list_item_text" />

        <TextView
            android:id="@+id/tv_web_army_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="@string/civilization_list_item_army_type"
            android:textColor="@color/light_neon_green"
            android:textSize="@dimen/civilizations_list_item_text" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>